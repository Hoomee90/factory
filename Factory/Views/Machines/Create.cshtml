@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name);
  @Html.TextBoxFor(model => model.Name);
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger fw-bold" })</p>

  @Html.LabelFor(model => model.DangerLevel);
  @Html.TextBoxFor(model => model.DangerLevel);
  <p>@Html.ValidationMessageFor(model => model.DangerLevel, "", new { @class = "text-danger fw-bold" })</p>

  <input type="submit" value="Add new machine">
}
<p>@Html.ActionLink("Back to machine list", "Index")</p>